<!DOCTYPE html{% block avanzu_html_start %}{% endblock %}>
{#
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
#}
<html lang="{{ app.request.locale }}">
<head>
    <title>
        {% block avanzu_document_title %}{{ block('avanzu_page_title') }}{% endblock %}
    </title>
    {% include('@AvanzuAdminTheme/Partials/_head.html.twig') %}
    {% block avanzu_head %}{% endblock %}
</head>
{#
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
#}
<body{% block avanzu_body_start %}{% endblock %} class="{{ avanzu_admin_context.skin|default("")|body_class }}">
{% block avanzu_after_body_start %}{% endblock %}
<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="{% block avanzu_logo_path %}{# {{ path('welcome'|route_alias) }} #} {% endblock %}" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini">
                {% block avanzu_logo_mini %}<b>A</b>LT{% endblock %}
            </span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg">
               {% block avanzu_logo_lg %} <b>Admin</b>LTE {% endblock %}
            </span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            {% block avanzu_navbar_toggle %}
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">{{ 'Toggle navigation'|trans({}, 'AvanzuAdminTheme')  }}</span>
            </a>
            {% endblock %}
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    {% block avanzu_navbar_messages %}
                        {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\NavbarController::messagesAction')) }}
                    {% endblock %}
                    {% block avanzu_navbar_notifications %}
                        {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\NavbarController::notificationsAction')) }}
                    {% endblock %}
                    {% block avanzu_navbar_tasks %}
                        {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\NavbarController::tasksAction')) }}
                    {% endblock %}
                    {% block avanzu_navbar_user %}
                        {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\NavbarController::userAction')) }}
                    {% endblock %}
                    {% block avanzu_navbar_control_sidebar_toggle %}
                    {% if avanzu_admin_context.control_sidebar %}
                    <!-- Control Sidebar Toggle Button -->
                    <li>
                        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                    </li>
                    {% endif %}
                    {% endblock %}
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            {% block avanzu_sidebar_user %}
                {% if app.user is not null and is_granted('IS_AUTHENTICATED_FULLY') %}
                    {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\SidebarController::userPanelAction')) }}
                {% endif %}
            {% endblock %}

            {% block avanzu_sidebar_search %}
                {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\SidebarController::searchFormAction')) }}
            {% endblock %}

            {% block avanzu_sidebar_nav %}
                {% if avanzu_admin_context.knp_menu.enable %}
                    {% include '@AvanzuAdminTheme/Sidebar/knp-menu.html.twig' %}
                {% else %}
                    {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\SidebarController::menuAction', {'request':app.request})) }} 
                {% endif %}
            {% endblock %}
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                {% block avanzu_page_title %}{{ 'Avanzu Admin'|trans({}, 'AvanzuAdminTheme') }}{% endblock %}
                <small>{% block avanzu_page_subtitle %}{% endblock %}</small>
            </h1>

            {% block avanzu_breadcrumb %}
                {% if avanzu_admin_context.knp_menu.enable %}
                    {% include '@AvanzuAdminTheme/Breadcrumb/knp-breadcrumb.html.twig' %}
                {% else %}
                    {{ render(controller('Avanzu\\AdminThemeBundle\\Controller\\BreadcrumbController::breadcrumbAction', {'request':app.request, 'title' : block('avanzu_page_title')})) }}
                {% endif %}
            {% endblock %}
            {#
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>
            #}
        </section>

        {% block avanzu_page_content_before %}{% endblock %}

        <!-- Main content -->
        <section class="{% block avanzu_page_content_class %}content{% endblock %}">
            {% block avanzu_page_content %}{% endblock %}
        </section>
        <!-- /.content -->

        {% block avanzu_page_content_after %}{% endblock %}
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->

    {% block avanzu_footer %}
        {% include '@AvanzuAdminTheme/Partials/_footer.html.twig' %}
    {% endblock %}
    {% block avanzu_control_sidebar %}
        {% if avanzu_admin_context.control_sidebar %}
            {% include '@AvanzuAdminTheme/Partials/_control-sidebar.html.twig' %}
        {% endif %}
    {% endblock %}
</div>
<!-- ./wrapper -->
<!-- REQUIRED JS SCRIPTS -->

{% include '@AvanzuAdminTheme/Partials/_scripts.html.twig' %}
{% block avanzu_javascripts %}{% endblock %}
{% block avanzu_javascripts_inline %}{% endblock %}

</body>
</html>
